

<h2 align="center"><%= @article.title %> </h2>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center"></h4>
  <hr>
    <%= simple_format(@article.description.html_safe) %>

  <div class="article-actions">
    <%= link_to "View Articles", articles_path, class: "btn btn-xs btn-primary" %>

    <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-xs btn-success" %>

    <%= link_to "Delete Article", article_path(@article), method: :delete,
                data: { confirm: "Are your sure?"},
                class: "btn btn-xs btn-danger" %>
  </div>
</div>
